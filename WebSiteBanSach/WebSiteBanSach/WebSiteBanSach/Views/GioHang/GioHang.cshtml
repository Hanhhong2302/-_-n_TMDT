@using WebSiteBanSach.Models
@model List<GioHang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>Giỏ Hàng của bạn</h2>
<table>
    <tr>
        <td>Mã sách</td>

        <td>Tên sách</td>

        <td>Ảnh Bìa</td>

        <td>Đơn Giá</td>

        <td>Số Lượng</td>

        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSach</td>

            <td><a href="@Url.Action("XemChiTiet", "Sach", new {@MaSach=item.iMaSach })"><img src=" @Url.Content("~/HinhAnhSP/"+item.sAnhBia)" width="50" height="50" /></a> </td>

            <td>@String.Format("{0:0,0}", item.dDonGia) VNĐ </td>

            <td>@item.iSoLuong</td>

            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>

        </tr>

    }
    <tr>
        <td colspan="6" style="text-align:right; color: blue">
            @Html.ActionLink("Chỉnh sửa giỏ hàng", "SuaGioHang")

        </td>
    </tr>
    <tr>
        <td colspan="6" style="text-align:right; color:blue">
            @using (Html.BeginForm("DatHang", "GioHang"))
            {
                <input type="submit" value="Đặt hàng" />
            }
        </td>
    </tr>
</table>
@*Css gio hang*@
<style>
    #divGioHang{
        border: 1px solid #EEEEEE;
        margin-left: 10%;
    }
        #divGioHang td {
            padding: 10px;
            border: 1px solid #EEEEEE;
        }
</style>
