
@using WebSiteBanSach.Models
@model List<GioHang>
@{ 
    ViewBag.Title = "Sua Gio Hang";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

<h2>GioHang</h2>
<table>
    <tr>
        <td>Mã sách</td>

        <td>Tên sách</td>

        <td>Ảnh Bìa</td>

        <td>Đơn Giá</td>

        <td>Số Lượng</td>

        <td>Thành tiền</td>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.iMaSach</td>

            <td>@item.sTenSach</td>

            <td><img src=" @Url.Content("~/HinhAnhSP/"+item.sAnhBia)" width="50" height="50" /></td>

            <td>@String.Format("{0:0,0}", item.dDonGia) VNĐ   </td>
            @*Chinh sua gio hang goi ve action CapNhatGioHang*@
            @using (Html.BeginForm("CapNhatGioHang", "GioHang", new { @iMaSP = item.iMaSach }))
            {
                    <td>@Html.TextBox("txtSoLuong", item.iSoLuong)</td>


            <td>@String.Format("{0:0,0}", item.ThanhTien) VNĐ</td>
            <td><input type="submit" value="Cập nhật" />
                <br />
            @*Xoa gio hang goi ve action XoaGioHang*@
                @Html.ActionLink("Xoá","XoaGioHang", new {@iMaSP=item.iMaSach})
            </td>
            


            }
            <td>

            </td>
        </tr>
     }
    
</table>
@*Css gio hang*@
<style>
    #divGioHang {
        border: 1px solid #EEEEEE;
        margin-left: 10%;
    }

        #divGioHang td {
            padding: 10px;
            border: 1px solid #EEEEEE;
        }
</style>

