@model WebSiteBanSach.Models.KhachHang

@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}
<div style="margin-left:500px">
    <h2>
        Đăng Nhập
    </h2>

    @using (Html.BeginForm("DangNhap", "NguoiDung", FormMethod.Post))
    {
        <span>Tài khoản</span><br />
        @Html.TextBox("txtTaiKhoan");<br />
        <span>Mật khẩu</span><br />
        @Html.Password("txtMatKhau");<br />
        <input type="submit" style="background-color:green;color:white;cursor:pointer;" id="btnSubmit" name="btnSubmit" value="Đăng nhập" />
    }
    <h1>@ViewBag.ThongBao</h1>
</div>